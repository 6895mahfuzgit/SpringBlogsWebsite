<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!-- Base Definition -->
    <definition name="common" template="/WEB-INF/layout/class.jsp">
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
    </definition>

    <definition name="home" extends="common">
        <put-attribute name="title" value="Spring Blog"/>
        <put-attribute name="body" value="/WEB-INF/view/home.jsp"/>
        <put-attribute name="current" value="home"/>
    </definition>

    <definition name="users" extends="common">
        <put-attribute name="title" value="Users"/>
        <put-attribute name="body" value="/WEB-INF/view/users.jsp"/>
        <put-attribute name="current" value="users"/>
    </definition>

    <definition name="user-detail" extends="common">
        <put-attribute name="title" value="User Details"/>
        <put-attribute name="body" value="/WEB-INF/view/user-detail.jsp"/>
        <put-attribute name="current" value="user-detail"/>
    </definition>
    <definition name="account" extends="common">
        <put-attribute name="title" value="User account"/>
        <put-attribute name="body" value="/WEB-INF/view/user-account.jsp"/>
        <put-attribute name="current" value="account"/>
    </definition>

    <definition name="user-register" extends="common">
        <put-attribute name="title" value="User Registration"/>
        <put-attribute name="body" value="/WEB-INF/view/user-register.jsp"/>
        <put-attribute name="current" value="register"/>
    </definition>

    <definition name="login" extends="common">
        <put-attribute name="title" value="Login"/>
        <put-attribute name="body" value="/WEB-INF/view/login.jsp"/>
        <put-attribute name="current" value="login"/>
    </definition>

</tiles-definitions>
